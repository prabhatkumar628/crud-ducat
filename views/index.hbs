{{>header}}
<title>Bootstrap demo</title>
{{>navbar}}
<div class="mid-section mt-2 p-2">
  <h5 class="bg-success text-center py-3 text-light">Employee records section</h5>
  <div class="table table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Designation</th>
          <th>Salary</th>
          <th>City</th>
          <th>State</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>

      <tbody>
        {{#each data}}
        <tr>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
          <td>{{designation}}</td>
          <td>{{salary}}</td>
          <td>{{city}}</td>
          <td>{{state}}</td>
          <td class="text-center"><a href="/edit/{{_id}}"><span class="material-symbols-outlined">edit</span></a></td>
          <td class="text-center"><a href="/delete/{{_id}}"><span class="material-symbols-outlined">delete_forever</span></a></td>
        </tr>
        {{/each}}
      </tbody>

    </table>
  </div>
</div>
{{>footer}}